<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineTrivia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/irc_blue_navy</item>
        <item name="colorPrimaryVariant">@color/irc_blue_navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Make the status bar color transparent. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Indicate that this activity will fill the viewport, even under the status bar. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Indicate that this activity will remain visible, behind navigation bars. -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>
